_npmname=stylus
pkgname=nodejs-stylus # All lowercase
pkgver=0.42.0
pkgrel=1
pkgdesc="Robust, expressive, and feature-rich CSS superset"
arch=(any)
url="http://github.com/learnboost/stylus"
license=('MIT')
depends=('nodejs' )
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)

package() {
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}

sha256sums=(11b11a20ba01c266e9f2c63a0c0b7022a85f10b5ad4f2a4176ed1af63bc983f3)

